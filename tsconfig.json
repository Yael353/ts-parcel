{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"outDir": "./dist",
		"sourceMap": true,
		"resolveJsonModule": true,
		"noImplicitAny": true,
		"noEmitOnError": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
